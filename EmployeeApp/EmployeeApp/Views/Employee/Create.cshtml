@model EmployeeApp.Models.EmployeeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>EmployeeViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" id="createEmployee">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="EmpName" class="control-label"></label>
                <input asp-for="EmpName" class="form-control" />
                <span asp-validation-for="EmpName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpDateOfHire" class="control-label"></label>
                <input asp-for="EmpDateOfHire" class="form-control" />
                <span asp-validation-for="EmpDateOfHire" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmpSupervisorId" class="control-label"></label>
                <input asp-for="EmpSupervisorId" class="form-control" />
                <span asp-validation-for="EmpSupervisorId" class="text-danger"></span>
            </div>
            @for (var a = 0; a < Model.EmployeeAttributes.Count; a++)
            {
                <div class="form-group">
                    <label asp-for="EmployeeAttributes[a].AttrName" class="control-label"></label>
                    <input asp-for="EmployeeAttributes[a].AttrName" class="form-control" />
                    <span asp-validation-for="EmployeeAttributes[a].AttrName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeAttributes[a].AttrValue" class="control-label"></label>
                    <input asp-for="EmployeeAttributes[a].AttrValue" class="form-control" />
                    <span asp-validation-for="EmployeeAttributes[a].AttrValue" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>

            }

        </form>
    </div>
</div>

<script>
    $("#createEmployee").submit(function(event) {
        debugger;
        event.preventDefault(); //prevent default action 
        var post_url = $(this).attr("action"); //get form action url
        var request_method = $(this).attr("method"); //get form GET/POST method
        //var form_data = $(this).serialize(); //Encode form elements for submission
        var form_data = {
            "EmpName": "EmpName",
            "EmpDateOfHire": "2020-12-12",
            "EmpSupervisorId": "7012F5C7-33AD-4839-A092-4FA6E1448A5D",
            "EmployeeAttributes": [{
                //"AttrId":"bcf0247e-cb5f-4a6a-a8ed-20fe39808e41",
                "AttrName":"AttrName",
                "AttrValue":"AttrValue"
            }]
        }
	
        $.ajax({
            url : post_url,
            type: request_method,
            dataType: "json",
            data : form_data
        }).done(function(response){ //
            debugger;
            $("#server-results").html(response);
        });
    });
</script>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
